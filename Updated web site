    <!-- Script for Google Sheets API and Email -->
    <script>
        $(document).ready(function() {
            // Form validation
            $("#contactForm").validate({
                rules: {
                    name: "required",
                    email: {
                        required: true,
                        email: true
                    },
                    interest: "required"
                },
                messages: {
                    name: "Please enter your name",
                    email: {
                        required: "Please enter your email address",
                        email: "Please enter a valid email address"
                    },
                    interest: "Please select your area of interest"
                },
                submitHandler: function(form) {
                    submitToGoogleSheet();
                    return false;
                }
            });
            
            function submitToGoogleSheet() {
                // Disable submit button to prevent multiple submissions
                $("#submitBtn").prop("disabled", true).text("Submitting...");
                
                // Collect form data
                const formData = {
                    name: $("#name").val(),
                    email: $("#email").val(),
                    interest: $("#interest").val(),
                    message: $("#message").val(),
                    newsletter: $("#newsletter").is(":checked") ? "Yes" : "No",
                    timestamp: new Date().toISOString()
                };
                
                // In a real-world scenario, you would send this data to your server
                // which would then use Google Sheets API to add the entry
                
                // Simulate API call with a timeout
                setTimeout(function() {
                    console.log("Form data to be sent to Google Sheets:", formData);
                    
                    // Simulate sending an email notification
                    sendEmailNotification(formData);
                    
                    // Show success message and reset form
                    $("#successMessage").fadeIn();
                    $("#contactForm")[0].reset();
                    $("#submitBtn").prop("disabled", false).text("Submit");
                    
                    // Hide success message after 5 seconds
                    setTimeout(function() {
                        $("#successMessage").fadeOut();
                    }, 5000);
                }, 1500);
            }
            
            function sendEmailNotification(formData) {
                // In a real implementation, this would send an API request to your server
                // which would then use a service like SendGrid, Mailgun, or nodemailer to send emails
                
                console.log("Email notification would be sent with:", {
                    to: "admin@ai4healthclub.org",
                    subject: "New Contact Form Submission",
                    body: `
                        Name: ${formData.name}
                        Email: ${formData.email}
                        Interest: ${formData.interest}
                        Message: ${formData.message}
                        Newsletter: ${formData.newsletter}
                        Timestamp: ${formData.timestamp}
                    `
                });
                
                // If newsletter is checked, also simulate adding to email list
                if (formData.newsletter === "Yes") {
                    console.log("User added to newsletter mailing list:", formData.email);
                }
            }
        });
    </script>
